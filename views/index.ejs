  <script>
    // Função para verificar se há scroll vertical
    function checkScroll() {
      var body = document.body;
      if (body.scrollHeight > window.innerHeight) {
        body.classList.add("scroll-vertical");
      } else {
        body.classList.remove("scroll-vertical");
      }
    }

    // Adiciona um ouvinte de evento para verificar o scroll
    window.addEventListener("scroll", checkScroll);

    // Chama a função inicialmente para verificar o estado no carregamento da página
